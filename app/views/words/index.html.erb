<p id="notice"><%= notice %></p>

<h1>Listing Words</h1>

<table>
  <thead>
    <tr>
      <th>Word</th>
      <th>Translation</th>
      <th>Idwordtype</th>
      <th>Ipa</th>
      <th>Iddictionary</th>
      <th>Iduser</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.Word %></td>
        <td><%= word.Translation %></td>
        <td><%= word.IDWordType %></td>
        <td><%= word.IPA %></td>
        <td><%= word.IDDictionary %></td>
        <td><%= word.IDUser %></td>
        <td><%= link_to 'Show', word %></td>
        <td><%= link_to 'Edit', edit_word_path(word) %></td>
        <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

