<p id="notice"><%= notice %></p>
<div>
<%= link_to 'Add Word', new_word_path, {:class => "btn btn-primary"} %>
<br/>
<%= alphabetical_paginate @alphaParams %>
</div>
<br/>
<div id="pagination_table" class="panel panel-default ">
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Word</th>
      <th>Translation</th>
      <th>Word Type</th>
      <th>Ipa</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= link_to word.Word, edit_word_path(word) %></td>
        <td><%= word.Translation %></td>
        <td><%= WordType.find(word.IDWordType).Name %></td>        
        <td><%= word.IPA %></td>
        <td><%= link_to image_tag('trashcan.png'), word, method: :delete, data: { confirm: 'Are you sure?' } %> </td>       
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div>
<%= alphabetical_paginate @alphaParams %>
<br />
<%= link_to 'Add Word', new_word_path, {:class => "btn btn-primary"} %>
</div>





