<p id="notice"><%= notice %></p>

<h1>Listing Words</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Word</th>
      <th>Translation</th>
      <th>Word Type</th>
      <th>Ipa</th>
      <%-#<th>Iddictionary</th>-%>
      <%-#<th>Iduser</th>-%>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.Word %></td>
        <td><%= word.Translation %></td>
        <td><%= WordType.find(word.IDWordType).Name %></td>        
        <td><%= word.IPA %></td>
        <td><%= link_to 'Edit', edit_word_path(word) %></td>
        <td><%= link_to image_tag('trashcan.png'), word, method: :delete, data: { confirm: 'Are you sure?' } %> </td>       
      </tr>
    <% end %>
  </tbody>
</table>

<br>

