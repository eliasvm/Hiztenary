<p id="notice"><%= notice %></p>

<h1>Listing Word Types</h1>

<table  class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @word_types.each do |word_type| %>
      <tr>
        <td><%= word_type.Name %></td>
        <td><%= word_type.Description %></td>
        <td><%= link_to 'Show', word_type %></td>
        <td><%= link_to 'Edit', edit_word_type_path(word_type) %></td>
        <td><%= link_to 'Destroy', word_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

