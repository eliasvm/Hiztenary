<p id="notice"><%= notice %></p>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, edit_user_path(user) %></td>
        <td><%= link_to image_tag('trashcan.png'), user, method: :delete, data: { confirm: 'Are you sure?' } %> </td>       
      </tr>
    <% end %>
  </tbody>
</table>

<br>

